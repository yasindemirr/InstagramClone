<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.StoryDetailFragment">

 <androidx.cardview.widget.CardView
     android:layout_width="match_parent"
     android:layout_height="0dp"
     android:layout_marginTop="@dimen/margin_5dp"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintBottom_toTopOf="@id/sendMessageLin"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:cardCornerRadius="@dimen/margin_10dp">
  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
   <androidx.viewpager2.widget.ViewPager2
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/storyViewPagerRec">
   </androidx.viewpager2.widget.ViewPager2>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_marginTop="@dimen/margin_15dp"
       android:layout_height="wrap_content"
       android:id="@+id/incatorLineer"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       android:orientation="horizontal"
       app:layout_constraintEnd_toEndOf="parent">
   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@android:color/transparent"
       android:orientation="horizontal">
    <FrameLayout
        android:id="@+id/viewLeft"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginEnd="@dimen/margin_40dp"
        >
    </FrameLayout>
    <FrameLayout

        android:id="@+id/viewRight"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_40dp"
        android:layout_weight="1">
    </FrameLayout>
   </LinearLayout>


   <com.google.android.material.imageview.ShapeableImageView
       android:layout_width="@dimen/post_circular_image"
       android:layout_height="@dimen/post_circular_image"
       android:src="@drawable/yasin"
       app:shapeAppearanceOverlay="@style/Circular"
       app:layout_constraintTop_toTopOf="parent"
       android:id="@+id/kullaniciFoto"
       app:layout_constraintStart_toStartOf="parent"
       android:layout_marginStart="@dimen/margin_10dp"
       android:layout_marginTop="@dimen/margin_30dp">
   </com.google.android.material.imageview.ShapeableImageView>
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="KullanıcıAdı"
       app:layout_constraintTop_toTopOf="@id/kullaniciFoto"
       app:layout_constraintBottom_toBottomOf="@id/kullaniciFoto"
       app:layout_constraintStart_toEndOf="@id/kullaniciFoto"
       android:layout_marginStart="@dimen/margin_15dp"
       android:textStyle="bold"
       android:id="@+id/storyKullaniciAdi"
       android:textSize="@dimen/story_kullanaciAdi"
       android:textColor="@color/white">

   </TextView>
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="zaman"
       android:id="@+id/zaman"
       app:layout_constraintTop_toTopOf="@id/kullaniciFoto"
       app:layout_constraintBottom_toBottomOf="@id/kullaniciFoto"
       app:layout_constraintStart_toEndOf="@id/storyKullaniciAdi"
       android:layout_marginStart="@dimen/margin_10dp"
       android:textSize="@dimen/story_kullanaciAdi"
       android:textColor="@color/white">
   </TextView>
   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/dot_three"
       app:tint="@color/white"
       app:layout_constraintTop_toTopOf="@id/kullaniciFoto"
       app:layout_constraintBottom_toBottomOf="@id/kullaniciFoto"
       app:layout_constraintEnd_toEndOf="parent">
   </ImageView>

  </androidx.constraintlayout.widget.ConstraintLayout>

 </androidx.cardview.widget.CardView>
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:id="@+id/sendMessageLin"
     android:paddingVertical="@dimen/margin_15dp"
     android:orientation="horizontal"
     app:layout_constraintBottom_toBottomOf="parent"
     android:layout_marginHorizontal="@dimen/margin_10dp"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintEnd_toEndOf="parent">
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:text="Mesaj gönder"
      android:textColor="@color/white"
      android:textStyle="bold"
      android:textSize="@dimen/mesaj_gonder"
      android:layout_weight="0.8"
      android:background="@drawable/mesaj_back"
      android:padding="@dimen/margin_15dp"
      >

  </TextView>
  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="0.1"
      android:layout_gravity="center_vertical"
      android:src="@drawable/fav"
      app:tint="@color/white">
  </ImageView>
  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="0.1"
      android:layout_gravity="center_vertical"
      android:src="@drawable/paper"
      app:tint="@color/white">
  </ImageView>

 </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>